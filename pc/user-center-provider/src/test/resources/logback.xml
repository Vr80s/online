<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

	<property name="logPath" value="/tmp/logs/user_center_provider" />
	
	<appender name="stdout_appender" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.out</Target>
		<encoder>
			<pattern>%n%msg%n%date [%level] [%thread] %logger{80} %line%n
			</pattern>
		</encoder>
	</appender>

	<appender name="file"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${logPath}/user.center.log</File>
		<encoder>
			<pattern>%n%msg%n%date [%level] [%thread] %logger{80} %line%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logPath}/user.center.log_%d{yyyy-MM-dd}</fileNamePattern>
		</rollingPolicy>
	</appender>
	
	<appender name="requestLogger"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${logPath}/request.log</File>
		<encoder>
			<pattern>%date | %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logPath}/request.log_%d{yyyy-MM-dd}</fileNamePattern>
		</rollingPolicy>
	</appender>
 
	<logger name="com.xczhihui" additivity="false">
		<level value="info" />
		<appender-ref ref="stdout_appender" />
	</logger>

	<logger name="org.springframework.jdbc.core" additivity="false">
		<level value="warn" />
		<appender-ref ref="stdout_appender" />
	</logger>
 
	<root>
		<level value="info" />
		<appender-ref ref="stdout_appender" />
	</root>

</configuration>
